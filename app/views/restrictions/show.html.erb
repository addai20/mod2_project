<ul>
  <h1><%=@restriction.name.capitalize%></h1>
  <br>
  <%MealRestriction.all.each do |mr|%>
  <% if mr.restriction_id == @restriction.id %>
  <% Meal.all.each do |m|%>
  <% if m.id == mr.meal_id%>
  <li><%= link_to "#{m.name.capitalize}", meal_path(m)%></li>
  <%end %>
  <%end %>
  <%end %>
  <%end %>
</ul>
